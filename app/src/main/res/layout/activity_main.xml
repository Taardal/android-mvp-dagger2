<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_movie_roll_icon"
        android:layout_margin="@dimen/margin_main_movie_roll_icon"
        android:contentDescription="@string/main_movie_roll_image_content_description"
        android:src="@drawable/movie_roll" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/edit_text_main_search"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginEnd="@dimen/padding_main_sides"
            android:layout_marginStart="@dimen/padding_main_sides"
            android:hint="@string/main_movie_title_ellipsis"
            android:textAlignment="center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_main_search"
            style="@style/PanelButton"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:background="@color/material_teal_500"
            android:drawableEnd="@drawable/ic_action_search_dark"
            android:text="@string/main_search_for_movies_by_title" />

        <Button
            android:id="@+id/button_main_upcoming_movies"
            style="@style/PanelButton"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:background="@color/material_teal_600"
            android:drawableEnd="@drawable/ic_action_movie_dark"
            android:text="@string/main_check_out_upcoming_movies" />

    </LinearLayout>

</LinearLayout>
