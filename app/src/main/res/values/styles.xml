<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PanelButton">
        <item name="android:paddingEnd">@dimen/padding_main_sides</item>
        <item name="android:paddingStart">@dimen/padding_main_sides</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MovieItemTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_movie_item</item>
        <item name="android:paddingStart">@dimen/margin_movie_item_icon_sides</item>
        <item name="android:paddingEnd">@dimen/margin_movie_item_icon_sides</item>
    </style>

</resources>
